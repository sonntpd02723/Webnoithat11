<base href="http://localhost:3000" />

 <div id="login" class="tabcontent">
    <div class="container">
      <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
          <div class="card card-signin my-5">
            <div class="card-body">
            
              <h5 class="card-title text-center">Sửa</h5>
              
              <form class="form-signin" action="/edituser/<%- user._id %>" method="POST">
            
                <br>
                <div class="form-group">
                  <img class="icon1" src="/icon/password.jpg"> 
                  <input type="password" name="password" class="form-control" placeholder="password" required>
                
                </div>
                <div class="form-group">
                  <img class="icon1" src="/icon/password.jpg"> 
                  <input type="text" name="name" class="form-control" placeholder="name" required>
                
                </div>
                <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Cập nhật</button>
                </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
 